@model Product
@{
    ViewData["Title"] = "Details";
}
<h1>@Model.Title</h1>
<div class="container"> 

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Image" class="card-img-top" style="height: 200px;object-fit:cover">
        </div>
        <div class="col-md-8">
            <p>@Model.Title</p>
            <p>@Model.Description</p>
            <p>@($"{Model.Price:C2}")</p>
            <p class="text-danger"> @Model.Category</p>
        </div>
    </div>
</div>